// ColorUtils.js

// Import any necessary libraries for color manipulation
import Vibrant from 'node-vibrant'; // Example library for color extraction

// Function to get the color palette from an image
export const getColorPalette = async (imageData) => {
  try {
    const palette = await Vibrant.from(imageData).getPalette();
    const colors = Object.values(palette).map((swatch) => swatch.getHex());
    return colors;
  } catch (error) {
    console.error("Error getting color palette:", error);
    throw new Error("Failed to get color palette");
  }
};
